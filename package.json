{
  "name": "@fdmg/css-grid",
  "version": "1.0.9",
  "description": "FDMG CSS Grid with Flexbox fallback",
  "style": "dist/css/grid.css",
  "scripts": {
    "build": "npm run clean && npm run lint && tsc && webpack --mode development && npm run sass",
    "compile-release": "tsc && webpack --mode production",
    "clean": "rimraf dist",
    "mkdir": "mkdirp dist/css",
    "lint": "tslint -p .",
    "release": "npm update && npm install && npm run clean && npm run lint && npm run compile-release && npm run sass",
    "sass": "npm run sass-grid && npm run sass-flex",
    "sass-grid": "npm run mkdir && node-sass --output-style=compressed scss/grid.scss -o dist/css",
    "sass-flex": "npm run mkdir && node-sass --output-style=compressed scss/flex.scss -o dist/css",
    "stop": "pm2 stop ecosystem.config.js",
    "start": "pm2 start ecosystem.config.js --watch",
    "test": "echo \"No tests specified\" && exit 0",
    "watch-client": "webpack --mode development --watch",
    "watch-server": "tsc --watch"
  },
  "author": "Willem Liu",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git@github.com:FDMediagroep/fdmg-css-grid.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/react": "^16.8.16",
    "@types/react-dom": "^16.8.4",
    "awesome-typescript-loader": "^5.0.0",
    "fs-extra": "^7.0.0",
    "koa": "^2.7.0",
    "koa-compress": "^3.0.0",
    "koa-json": "^2.0.2",
    "koa-mount": "^3.0.0",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.12.0",
    "path-to-regexp": "^2.4.0",
    "pm2": "^3.5.0",
    "preact": "^8.4.2",
    "preact-compat": "^3.18.5",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "rimraf": "^2.6.3",
    "tslint": "^5.16.0",
    "tslint-react": "^4.0.0",
    "typescript": "^3.4.5",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.1"
  }
}
